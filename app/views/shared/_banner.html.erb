<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://res.cloudinary.com/charmdev/image/upload/v1566800613/TherAnimal/therapypug.jpg);">
  <div class="banner-text">
    <h1>TherAnimal - Therapy Animals for Hire</h1>
    <p>If you feel like I look, we can help!</p>
    <% if user_signed_in? %>
      <%= link_to 'See Animals', animals_path, class: "btn btn-flat" %>
    <% else %>
      <%= link_to 'Sign In', new_user_session_path, class: "btn btn-flat" %>
    <% end %>
  </div>
</div>


<div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto">
    <li><%= link_to "Home", root_path, class: "nav-link" %></li>
    <li><%= link_to "Animals", animals_path, class: "nav-link" %></li>
    <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://res.cloudinary.com/charmdev/image/upload/w_1000,c_fill,ar_1:1,g_auto,r_max,bo_5px_solid_red,b_rgb:262c35/v1566801585/cat.jpg" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          <a class="dropdown-item" href="#">Account</a>
        </div>
      </li>
      <% else %>
        <li><%= link_to "Sign In", new_user_session_path, class: "nav-link" %></li>
      <% end %>
    </ul>
  </div>
</div>
